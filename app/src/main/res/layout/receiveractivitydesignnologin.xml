        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="TextViewasd"
                    android:textColor="@android:color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_marginBottom="0dp"
                    android:background="#808080" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/textView3"
                    android:gravity="right"
                    android:ellipsize="end"
                    android:padding="10dp"
                    android:text="Kaina"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewkamb"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView4"
                    android:ellipsize="end"
                    android:padding="10dp"
                    android:text="Kambarių skaičius:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView4"
                    android:layout_toRightOf="@id/textViewkamb"
                    android:padding="10dp"
                    android:text="kambarys"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/textViewPardavejas"
                    android:layout_marginBottom="0dp"
                    android:background="#808080" />

                <TextView
                    android:id="@+id/textViewPardavejas"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewkamb"
                    android:ellipsize="end"
                    android:padding="10dp"
                    android:text="Pardavėjas:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewPardavejas1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewkamb"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@id/textViewPardavejas"
                    android:padding="10dp"
                    android:text="Pardavejas"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textViewPardavejas"
                    android:layout_marginBottom="0dp"
                    android:background="#808080" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewPardavejas"
                    android:layout_marginTop="0dp"
                    android:padding="10dp"
                    android:text="Description" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textView5"
                    android:layout_marginBottom="0dp"
                    android:background="#808080" />

                <TextView
                    android:id="@+id/textViewNumeris"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Skambinti pardavėjui:"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/textViewNum"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="15dp"
                    android:layout_toEndOf="@+id/textViewNumeris"
                    android:autoLink="phone"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Numeris"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/twitter"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="twitter"></Button>

            </RelativeLayout>

