<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="@android:dimen/app_icon_size"
                android:text="TextViewasd" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="0dp"
                    android:background="#808080" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_toRightOf="@id/textViewkaina"
                    android:ellipsize="end"
                    android:padding="10dp"
                    android:text="Kaina"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewkaina"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:padding="10dp"
                    android:text="Kaina:"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@+id/textView4"
                    android:layout_marginBottom="0dp"
                    android:background="#808080" />

                <TextView
                    android:id="@+id/textViewkamb"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewkaina"
                    android:ellipsize="end"
                    android:padding="10dp"
                    android:text="Kambarių skaičius:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewkaina"
                    android:layout_toRightOf="@id/textViewkamb"
                    android:padding="10dp"
                    android:text="kambarys"
                    android:textStyle="bold" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/textViewPardavejas"
                    android:layout_marginBottom="0dp"
                    android:background="#808080" />

                <TextView
                    android:id="@+id/textViewPardavejas"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewkamb"
                    android:ellipsize="end"
                    android:padding="10dp"
                    android:text="Pardavėjas:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewPardavejas1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewkamb"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@id/textViewPardavejas"
                    android:padding="10dp"
                    android:text="Pardavejas"
                    android:textStyle="bold" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/textView5"
                    android:layout_marginBottom="0dp"
                    android:background="#808080" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewPardavejas"
                    android:layout_marginTop="1dp"
                    android:padding="10dp"
                    android:text="Description" />

                <TextView
                    android:id="@+id/textViewNumeris"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Skambinti pardavėjui:" />

            </RelativeLayout>
            <!--RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bottomNavFirst"
                    app:itemBackground="@color/colorPrimary"
                    app:itemTextColor="@drawable/selector"
                    app:itemIconTint="@drawable/selector"
                    app:menu="@menu/menu_navigation"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout-->
        </LinearLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/image1"
            android:layout_width="410dp"
            android:background="#c1c1c1"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/textViewNum"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="15dp"
            android:autoLink="phone"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:padding="10dp"
            android:text="Numeris"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>
</LinearLayout>