<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="15dp"
        android:textSize="@android:dimen/app_icon_size"
        android:text="TextViewasd" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textViewkaina"
            android:ellipsize="end"
            android:padding="10dp"
            android:text="Kaina"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewkaina"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:padding="10dp"
            android:text="Kaina:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewkamb"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:padding="10dp"
            android:layout_below="@id/textViewkaina"
            android:text="Kambarių skaičius:"
            android:textStyle="bold" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_toRightOf="@id/textViewkamb"
        android:layout_below="@id/textViewkaina"
        android:text="kambarys" />

        <TextView
            android:id="@+id/textViewNumeris"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:text="Skambinti pardavėjui:"
            android:autoLink="phone"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textViewNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/textViewNumeris"
            android:padding="10dp"
            android:text="Numeris"
            android:autoLink="phone"
            android:gravity="left"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Description" />

</LinearLayout>